# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google Sheets Credentials Path
GOOGLE_SHEETS_CREDENTIALS=config/google_sheets_credentials.json

# Yahoo Finance Configuration (optional overrides)
YAHOO_FINANCE_RATE_LIMIT=5  # Requests per second
YAHOO_FINANCE_TIMEOUT=30    # Request timeout in seconds

# Trading Configuration
TRADING_MODE=paper  # 'paper' for paper trading, 'live' for live trading
LOG_LEVEL=INFO      # DEBUG, INFO, WARNING, ERROR

# Database Configuration (if using database for trade storage)
# DATABASE_URL=sqlite:///trading_data.db

# API Keys (if using additional data sources)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
# QUANDL_API_KEY=your_quandl_key

# Portfolio Configuration
INITIAL_CAPITAL=100000
MAX_PORTFOLIO_RISK=0.20
MAX_POSITION_SIZE=0.05

# Notification Settings
ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=recipient@gmail.com
